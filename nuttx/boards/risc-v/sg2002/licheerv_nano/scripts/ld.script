MEMORY
{
    ram (rwx) : ORIGIN = 0x80000000, LENGTH = 4096K  /* 0x80000000 ~ 0x80400000 */
}

OUTPUT_ARCH("riscv")

SECTIONS
{
  . = 0x8FC00000;
  
  .text :
    {
      _stext = ABSOLUTE(.);
      KEEP (*(.vectors))
      *(.text .text.*)
      *(.gnu.warning)
      *(.stub)
      *(.glue_7)
      *(.glue_7t)
      *(.jcr)
      *(.gnu.linkonce.t.*)
      *(.init)
      *(.fini)
      _etext = . ;
    } > ram  /* 代码段放入 ram 区域 */

  .rodata : ALIGN(4)
    {
      _srodata = . ;
      *(.rodata .rodata.*)
      *(.rodata1)
      *(.gnu.linkonce.r*)
      _erodata = . ;
    } > ram

  .tdata : ALIGN(4)
    {
      _stdata = ABSOLUTE(.);
      *(.tdata .tdata.* .gnu.linkonce.td.*);
      _etdata = ABSOLUTE(.);
    } > ram

  .tbss : ALIGN(4)
    {
      _stbss = ABSOLUTE(.);
      *(.tbss .tbss.* .gnu.linkonce.tb.* .tcommon);
      _etbss = ABSOLUTE(.);
    } > ram

  _eronly = ABSOLUTE(.);

  .data : ALIGN(4)
    {
      _sdata = ABSOLUTE(.);
      *(.data .data.*)
      *(.data1)
      *(.gnu.linkonce.d*)
      . = ALIGN(4);
      _edata = ABSOLUTE(.);
    } > ram

  .bss : ALIGN(4)
    {
      _sbss = ABSOLUTE(.);
      *(.bss .bss.*)
      *(.sbss .sbss.*)
      *(.gnu.linkonce.b*)
      *(COMMON)
      . = ALIGN(32);
      _ebss = ABSOLUTE(.);
    } > ram

  .stack_top :
    {
      . = ALIGN(32);
      _stack_top = ABSOLUTE(.);
    } > ram

  .stab 0 : { *(.stab) }
  .stabstr 0 : { *(.stabstr) }
  .stab.excl 0 : { *(.stab.excl) }
  .stab.exclstr 0 : { *(.stab.exclstr) }
  .stab.index 0 : { *(.stab.index) }
  .stab.indexstr 0 : { *(.stab.indexstr) }
  .comment 0 : { *(.comment) }
  .debug_abbrev 0 : { *(.debug_abbrev) }
  .debug_info 0 : { *(.debug_info) }
  .debug_line 0 : { *(.debug_line) }
  .debug_pubnames 0 : { *(.debug_pubnames) }
  .debug_aranges 0 : { *(.debug_aranges) }
}
